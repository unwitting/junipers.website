---
import BaseLayout from '../layouts/BaseLayout.astro';

const TITLE = null;
const MERMAID_MIXUP_URL = 'https://etsy.com/shop/mermaidmixup';
---
<style lang="scss">
@import '../style/mixins.scss';

.container {
    width: 100%;
    height: 100vh;

    .img {
        z-index: -1;
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;

        object-position: center bottom;
        object-fit: contain;
        object-repeat: no-repeat;
    }

    .main {
        .welcome {
            box-sizing: border-box;
            padding: 2rem;

            h1 {
                @include font-maintext;
                font-size: 3rem;
                margin: 0;
            }
            
            p {
                font-size: 1.3rem;
                margin: 1rem 0 0 2rem;
            }
        }

        .nav {
            box-sizing: border-box;
            padding: 2rem;
            margin: 0 0 0 1rem;

            ol {
                margin: 0;
                padding: 0;

                li {
                    list-style: none;
                    font-size: 1.2rem;
                    margin: 0 0 0.75rem 0;

                    a {
                        color: inherit;
                        @include font-maintext-bold();
                    }
                }
            }
        }
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        box-sizing: border-box;
        padding: 1rem;
        text-align: right;

        a {
            color: inherit;
            @include font-maintext-bold();
        }
    }
}
</style>

<BaseLayout title={ TITLE }>
    <div class="container">
        <img
            class="img"
            srcset="/assets/flowers.480w.jpg 480w,
                    /assets/flowers.800w.jpg 800w,
                    /assets/flowers.1200w.jpg 1200w"
            sizes="(min-aspect-ratio: 0.718) calc(100vh * 1200 / 1671),
                   100vw"
            src="/assets/flowers.800w.jpg" />
        <header class="header">
            
        </header>
        <main class="main">
            <section class="welcome">
                <h1>Juniper Preston</h1>
                <p>software engineer &amp; maker of nice things</p>
            </section>

            <nav class="nav">
                <ol>
                    <li><a href="/about">about me</a></li>
                    <li><a href={ MERMAID_MIXUP_URL }>shop on etsy</a></li>
                </ol>
            </nav>
        </main>
        <footer class="footer">junipers.website © Juniper Preston {new Date().getFullYear()} • image by <a href="https://unsplash.com/@evieshaffer">Evie S</a></footer>
    </div>
</BaseLayout>