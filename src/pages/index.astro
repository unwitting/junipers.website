---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = null;
---
<style lang="scss">
@import '../style/mixins.scss';

.container {
    width: 100%;
    height: 100vh;

    background-image: url('/assets/flower-home.jpg');
    background-position: center bottom;
    background-size: contain;
    background-repeat: no-repeat;

    .main {
        .welcome {
            box-sizing: border-box;
            padding: 2rem;

            h1 {
                @include font-maintext;
                font-size: 3rem;
                margin: 0;
            }
            
            p {
                font-size: 1.3rem;
                margin: 1rem 0 0 0;
            }
        }
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        box-sizing: border-box;
        padding: 1rem;
        text-align: right;

        a {
            color: inherit;
            @include font-maintext-bold();
        }
    }
}
</style>

<BaseLayout title={ title }>
    <div class="container">
        <header class="header">
            
        </header>
        <main class="main">
            <section class="welcome">
                <h1>Juniper Preston</h1>
                <p>Software engineer</p>
            </section>
        </main>
        <footer class="footer">junipers.website © Juniper Preston {new Date().getFullYear()} • image by <a href="https://unsplash.com/@evieshaffer">Evie S</a></footer>
    </div>
</BaseLayout>